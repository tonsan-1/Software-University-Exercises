<div class="destination-ticket">
    <div class="destination-left">
        <img src="{{imgUrl}}"
            alt="">
    </div>
    <div class="destination-right">
        <div>
            <h3>{{destination}}</h3><span>{{departureDate}}</span>
        </div>
        <div>
            to {{city}}
        </div>
        <p>{{duration}} days </p>
        <a href="#/delete/{{@key}}" class="remove">REMOVE</a>
        <a href="#/details/{{@key}}" class="details">Details</a>
    </div>
</div>